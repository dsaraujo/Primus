{"type":"spell","name":"Shadows of the Fires Past","system":{"technique":{"value":"in"},"form":{"value":"ig"},"baseLevel":3,"range":{"value":"personal"},"duration":{"value":"moment"},"target":{"value":"sight"},"complexity":0,"ritual":false,"technique-req":{"cr":false,"in":false,"mu":false,"pe":false,"re":false},"form-req":{"an":false,"aq":false,"au":false,"co":false,"he":false,"ig":false,"im":false,"me":false,"te":false,"vi":false},"description":"Allows you to see where fires have been in the past lunar month. A light red flickering haze appears where the fire was, and you gain an intuitive sense of when the fire was there. This spell does not look into the past, but detects the traces of fire.","source":"ArM5","page":141,"indexKey":"shadows-of-the-fires-past","targetSize":0,"enhancingRequisite":0,"general":false,"levelOffset":0,"baseEffectDescription":"","applyFocus":false,"bonus":0,"bonusDesc":"","xp":0,"masteryAbilities":"","review_status":"toReview","reviewer":"","ownership":null},"img":"systems/arm5e/assets/magic/ig.png","effects":[],"flags":{},"_stats":{"compendiumSource":null,"duplicateSource":null,"coreVersion":"12.331","systemId":"arm5e","systemVersion":"2.3.2.5","createdTime":1730266564295,"modifiedTime":1730266564295,"lastModifiedBy":"6SdI10VpXHcBvx2J"},"_id":"HjxUvwF8M3gDzUZU","folder":"TXWRpVwDyXc4LXyP","sort":0,"ownership":{"default":0,"6SdI10VpXHcBvx2J":3}}
